@model List<VwProduct>

<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">@ResourceWeb.ProductsPage</h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">@ResourceWeb.ProductsPage</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ResourceWeb.ProductsPage</li>
                    </ol>
                </nav>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ResourceWeb.ProductsPage</h4>
                    <div class="row">
                        <div class="col-12">
                            <a asp-controller="Product" asp-action="Edit" class="btn btn-success btn-fw">@ResourceWeb.New</a>
                            <table id="order-listing" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@ResourceWeb.Img</th>
                                        <th>@ResourceWeb.ProductName</th>
                                        <th>@ResourceWeb.CategoryName</th>
                                        <th>@ResourceWeb.Price</th>
                                        <th>@ResourceWeb.Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr style="margin:0px;padding:0px;">
                                            <td class="col-md-8">
                                                <img src="~/Uploads/ProductImg/@product.ProductImg" />
                                            </td>
                                            <td class="col-md-8">@product.ProductName</td>
                                            <td class="col-md-8">@product.CategoryName</td>
                                            <td class="col-md-8">@product.ProductPrice</td>

                                            <td class="col-md-4" style="margin:0px;padding:0px;">
                                                <a style="height:max-content"
                                                   asp-controller="Product" asp-action="Edit" asp-route-ProductId="@product.Id"
                                                   class="btn btn-info btn-fw">@ResourceWeb.Edit</a>


                                                <a asp-controller="Product" asp-action="Delete" asp-route-ProductId="@product.Id"
                                                   class="btn btn-danger btn-fw"
                                                   onclick="return confirm(" Are you sure");">@ResourceWeb.Delete</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- main-panel ends -->
</div>

@section Scripts
{
    <!-- plugins:js -->
    <script src="~/Admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page -->
    <script src="~/Admin/js/data-table.js"></script>
    <!-- End custom js for this page -->
}


