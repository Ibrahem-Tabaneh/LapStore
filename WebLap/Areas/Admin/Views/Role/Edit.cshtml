@model NewRole

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">@ResourceWeb.CreateRole</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">@ResourceWeb.CreateRole</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ResourceWeb.CreateRole</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ResourceWeb.CreateRole</h4>
                    <p class="card-description">@ResourceWeb.CreateRole</p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="Role" asp-action="Save" role="form">

                        <div class="form-group">
                            <label for="exampleInputUsername1">@ResourceWeb.RoleName</label>
                            <input asp-for="RoleName" type="text" class="form-control" placeholder="Role Name">
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">@ResourceWeb.Save</button>
                        <button class="btn btn-light">@ResourceWeb.Back</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}