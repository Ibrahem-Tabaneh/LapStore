@model RegisterViewModel

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>@ResourceWeb.create_account</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">@ResourceWeb.Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ResourceWeb.create_account</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>@ResourceWeb.create_account</h3>
                <div class="theme-card">
                    <form class="theme-form" asp-controller="Account" asp-action="Save" method="post" role="form">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="fname">@ResourceWeb.Fname</label>
                                <input asp-for="Fname" type="text" class="form-control" id="fname" placeholder="First Name">
                                <span asp-validation-for="Fname" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="lname">@ResourceWeb.Lname</label>
                                <input asp-for="Lname" type="text" class="form-control" id="lname" placeholder="Last Name">
                                <span asp-validation-for="Lname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="email">@ResourceWeb.Email</label>
                                <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="password">@ResourceWeb.Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-solid">@ResourceWeb.create_account</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

