@model List<OrderItem>

<!--section start-->
<section class="cart-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <table class="table cart-table table-responsive-xs">
                    <thead>
                        <tr class="table-head">
                            <th scope="col">image</th>
                            <th scope="col">product name</th>
                            <th scope="col">price</th>
                            <th scope="col">quantity</th>
                            <th>total price</th>

                        </tr>
                    </thead>
                   
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Product" asp-action="ProductDetails" asp-route-ProductId="@item.ProductId"><img src="~/Uploads/ProductImg/@item.ProductImg" alt=""></a>
                           
                                </td>

                               <td>@item.ProductName</td>
                               <td>@item.ProductPrice</td>
                               <td>@item.Qty</td>
                                <td>@(item.ProductPrice * item.Qty) $</td>

                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>
<!--section end-->